generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Aluno {
  id        Int    @id @default(autoincrement())
  matricula String @unique
  cpf       String @unique
  nome      String
  serie     Int?

  @@map("alunos")
}

